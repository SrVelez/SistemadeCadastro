<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>ServletAluno</servlet-name>
        <servlet-class>br.com.bean.ServletAluno</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletDeletar</servlet-name>
        <servlet-class>br.com.bean.ServletDeletar</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletEditarAluno</servlet-name>
        <servlet-class>br.com.bean.ServletEditarAluno</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletAlterarAluno</servlet-name>
        <servlet-class>br.com.bean.ServletAlterarAluno</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletTurma</servlet-name>
        <servlet-class>br.com.bean.ServletTurma</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletProfessor</servlet-name>
        <servlet-class>br.com.bean.ServletProfessor</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletAluno</servlet-name>
        <url-pattern>/aluno</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletDeletar</servlet-name>
        <url-pattern>/del</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletEditarAluno</servlet-name>
        <url-pattern>/editar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletAlterarAluno</servlet-name>
        <url-pattern>/alterar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletTurma</servlet-name>
        <url-pattern>/turma</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletProfessor</servlet-name>
        <url-pattern>/prof</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
